{% set main_container_section = 'is-customers-home' %}
{% trans_default_domain 'clients' %}
{% extends 'layout.html.twig' %}

{% block title %}{{ ('index.meta.title')|trans }}{% endblock %}

{% block content %}
    {% embed '_components/page_header.html.twig' %}
        {% trans_default_domain 'clients' %}
        {% block breadcrumbs_outer %}{# hide breadcrumbs on index page #}{% endblock breadcrumbs_outer %}
        {% block title %}{{ 'index.header.title'|trans }}{% endblock title %}
        {% block description %}{{ 'index.header.description'|trans }}{% endblock description %}
    {% endembed %}

    <section class="content">
        <div class="card-deck card_filter">
            <a class="card large" href="{{ url('clients_history', {'sid':sid}) }}">
                <div class="card-body">
                    <div class="subsection-icon"></div>
                    <h2 class="card-title">{{ 'index.history.title'|trans }}</h2>
                    <p class="card-text">{{ 'index.history.description'|trans }}</p>
                </div>
            </a>
            <a class="card large" href="{{ url('clients_db', {'sid':sid}) }}">
                <div class="card-body">
                    <div class="subsection-icon"></div>
                    <h2 class="card-title">{{ 'index.data_base.title'|trans }}</h2>
                    <p class="card-text">{{ 'index.data_base.description'|trans }}</p>
                </div>
            </a>
            <div class="card large disabled-hover muted">
                <div class="card-body">
                    <img src="{{ asset('img/icons/star.svg') }}" alt="highlight section" class="star_highlight">
                    <div class="subsection-icon"></div>
                    <h2 class="card-title">{{ 'index.advanced_promotions.title'|trans }}</h2>
                    <span class="comming_soon my-3">{{ 'index.advanced_promotions.description'|trans }}</span>
                </div>
            </div>
        </div>
    </section>

{% endblock content %}